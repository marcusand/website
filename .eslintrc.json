{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": "warn",
    "comma-dangle": "off",
    "semi": "warn",
    "react/jsx-filename-extension": "off",
    "indent": ["warn", 2],
    "quotes": ["warn", "single"],
    "no-var": ["warn"],
    "space-before-blocks": ["warn", "always"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
